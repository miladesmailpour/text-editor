{
  "env": {
    "browser": true
  },
  "rules": {
    // Override our default settings just for this directory
    "eqeqeq": "warn",
    "strict": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-restricted-globals": "off",
    "no-const-assign": "off",
    "no-unused-vars": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
